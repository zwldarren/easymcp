# EasyMCP Environment Configuration
# Copy this file to .env and update the values for your environment

# =============================================================================
# Core Configuration
# =============================================================================
EASYMCP_HOST=127.0.0.1
EASYMCP_PORT=8000
EASYMCP_DEBUG=false
EASYMCP_LOG_LEVEL=INFO

# =============================================================================
# Security Configuration
# =============================================================================
# IMPORTANT: Generate a strong secret key for production!
# You can generate one with: python -c "import secrets; print(secrets.token_urlsafe(32))"
EASYMCP_JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production

# Default admin user credentials
# IMPORTANT: Change these for production!
EASYMCP_ADMIN_USERNAME=admin
EASYMCP_ADMIN_PASSWORD=change-this-password
EASYMCP_ADMIN_EMAIL=admin@example.com

# =============================================================================
# Database Configuration
# =============================================================================
# SQLite
EASYMCP_DATABASE_URL=sqlite:///./easymcp.sqlite
# PostgreSQL
# EASYMCP_DATABASE_URL=postgresql://easymcp:your-password@localhost:5432/easymcp

# =============================================================================
# CORS Configuration
# =============================================================================
# JSON array of allowed origins for CORS
# EASYMCP_ALLOWED_ORIGINS='["http://localhost:8000","http://127.0.0.1:8000"]'

# =============================================================================
# MCP Server Configuration
# =============================================================================
# Pass environment variables to MCP servers
EASYMCP_PASS_ENVIRONMENT=false

# =============================================================================
# Optional Configuration
# =============================================================================
# Configuration directory (optional, defaults to ~/.config/easymcp)
# EASYMCP_CONFIG_DIR=/path/to/config

# Docker socket path (when running MCP servers in Docker)
# DOCKER_HOST=unix:///var/run/docker.sock
